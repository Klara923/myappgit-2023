<main id="main" class="column col-12 main-new-contact">
  <div class="column col-12">
    <h1 class="section-title">New user</h1>
    <div class="section-line columns col-12"></div>
  </div>
  {{#if loggedIn}}
    {{#if isAdmin}}
      <section class="new-contact-section columns col-12">
        <form action="/users/new" method="post">
          <fieldset class="columns col-12">
            <div class="columns col-6 col-md-12 new-contact-column">
              <div class="column col-12 input-container">
                <label for="uName">Nick</label>
                <br />
                <input type="text" name="uName" id="uName" />
                <br />
              </div>
              <div class="column col-12 input-container">
                <label for="uUserName">Username</label>
                <br />
                <input type="text" name="uUserName" id="uUserName" />
                <br />
              </div>
            </div>
            <div class="columns col-6 col-md-12 new-user-column">
              <div class="column col-12 input-container">
                <label for="uPassword">Password</label>
                <br />
                <input type="text" name="uPassword" id="uPassword" />
                <br />
              </div>
              <div class="column col-12 input-container">
                <label for="uType">Type</label>
                <select name="uType" id="uType">
                  <option value="User">User</option>
                  <option value="Admin">Admin</option>
                </select>
                <br />
              </div>
            </div>
          </fieldset>
          <div class="column col-12">
            <input type="submit" value="Add user" class="new-contact-button" />
          </div>
        </form>
      </section>
    {{else}}
      <p>Sorry, you must be an administrator to add a new user!</p>
    {{/if}}
  {{else}}
    <p>
      Sorry, you must be logged in to add a new user!
      <br />
      Please go to the
      <a href="/login">login</a>
      page.
    </p>
  {{/if}}
</main>